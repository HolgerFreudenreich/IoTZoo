@using MudBlazor

@* https://confluence.lobaro.com/display/PUB/CRON+Expressions *@
<MudStack Row="true">
   <MudTextField @bind-Value="Cron.SecondExpression"
                 Label="Second (0-59), Allowed special chars , - * /"
                 Immediate="true"
                 Variant="Variant.Text">
   </MudTextField>
   <MudTextField @bind-Value="Cron.MinuteExpression"
                 Label="Minute (0-59), Allowed special chars , - * /"
                 Immediate="true"
                 Variant="Variant.Text">
   </MudTextField>
   <MudTextField @bind-Value="Cron.HourExpression"
                 Label="Hour (0-23), Allowed special chars , - * /"
                 Immediate="true"
                 Variant="Variant.Text">
   </MudTextField>
   <MudTextField @bind-Value="Cron.DayOfMonthExpression"
                 Label="Day (1-31), Allowed special chars , - * / ?"
                 Immediate="true"
                 Variant="Variant.Text">
   </MudTextField>
   <MudTextField @bind-Value="Cron.MonthOfYearExpression"
                 Label="Month (1-12) or (JAN-DEC), Allowed special chars , - * /"
